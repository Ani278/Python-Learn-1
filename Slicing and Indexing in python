>>> mystring ="hello world"
>>> mystring
'hello world'
>>> mystring[0]
'h'
>>> mystring[8]
'r'
>>> mystring[9]
'l'
>>> mystring[-2]
'l'
>>> mystring[-3]
'r'
>>> mystring ="abcdefgh"
>>> mystring[2]
'c'
>>> mystring[2:]
'cdefgh'
>>> mystring[:2]
'ab'
>>> mystring[::]
'abcdefgh'
>>> mystring
'abcdefgh'
>>> mystring
'abcdefgh'
>>> mystring[::2]
'aceg'
>>> mystring[::3]
'adg'
>>> mystring[2::3]
'cf'
>>> mystring[2:1:3]
''
>>> mystring[2:4:3]
'c'
>>> mystring[::-1]
'hgfedcba'
